<?xml version='1.0' encoding='utf-8'?>
<widget id="wallet.dentacoin.com" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Dentacoin Wallet</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="orientation" value="portrait" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon width="48" height="48" density="hdpi" src="/app-resources/images/wallet-app-icon-48x48px.png"/>
        <icon width="72" height="72" density="xhdpi" src="/app-resources/images/wallet-app-icon-72x72px.png"/>
        <icon width="144" height="144" density="xxhdpi" src="/app-resources/images/wallet-app-icon-144x144px.png"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="app-resources/images/wallet-app-icon-180px.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="app-resources/images/wallet-app-icon-60px.png" width="60" height="60" />
        <icon src="app-resources/images/wallet-app-icon-120px.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="app-resources/images/wallet-app-icon-76px.png" width="76" height="76" />
        <icon src="app-resources/images/wallet-app-icon-152px.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="app-resources/images/wallet-app-icon-40px.png" width="40" height="40" />
        <icon src="app-resources/images/wallet-app-icon-80px.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="app-resources/images/wallet-app-icon-57px.png" width="57" height="57" />
        <icon src="app-resources/images/wallet-app-icon-114px.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="app-resources/images/wallet-app-icon-72px.png" width="72" height="72" />
        <icon src="app-resources/images/wallet-app-icon-144px.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="app-resources/images/wallet-app-icon-29px.png" width="29" height="29" />
        <icon src="app-resources/images/wallet-app-icon-58px.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="app-resources/images/wallet-app-icon-50px.png" width="50" height="50" />
        <icon src="app-resources/images/wallet-app-icon-100px.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="app-resources/images/wallet-app-icon-167px.png" width="167" height="167" />
    </platform><!-- for iOS -->
    <feature name="SocialSharing">
        <param name="ios-package" value="SocialSharing" />
    </feature>
    <!-- for Android (you will find one in res/xml) -->
    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>
    <preference name="SplashScreen" value="none" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <access origin="*"/>
    <allow-navigation href="https://dentacoin.com/*"/>
</widget>
